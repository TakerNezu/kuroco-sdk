/**
 * NOTE DO NOT USE THIS FILE DIRECTLY.
 * THIS FILE IS A DEFECTIVE CONFIGURATION DUE TO BE USED AS A PART OF DYNAMIC COMPILATION TO EXPORT JS FILES FROM TS.
 * @see dist/index.js:applyGenerate()
 **/
{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false,
        "removeComments": false,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "noLib": false,
        "noImplicitThis": false,
        "allowJs": true,
        "checkJs": false,
        "lib": ["dom"]
    },
    "exclude": ["node_modules", "dist", "mv.ts"],

    // NOTE
    // the below extended file is created dynamically when generates JS files by this app's own generator,
    // which is for defining "includes" values at runtime.
    // it is due to that tsc doesn't support mixup specifying target ts files and tsconfig.json,
    // so that generator makes this files at executing time and injects values which should be transpiled.
    "extends": "./tsconfig.forjs.includes.json"
}
